<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities"
  IgnorableNamespaces="uap rescap">

  <Identity
    Name="com.diskpartgui.app"
    Publisher="CN=DiskpartGUI"
    Version="1.0.0.0" />

  <Properties>
    <DisplayName>DiskpartGUI</DisplayName>
    <PublisherDisplayName>DiskpartGUI</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop"
      MinVersion="10.0.17763.0"
      MaxVersionTested="10.0.26100.0" />
  </Dependencies>

  <Resources>
    <Resource Language="en-US" />
  </Resources>

  <Applications>
    <Application Id="DiskpartGUI"
      Executable="DiskpartGUI.exe"
      EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="DiskpartGUI"
        Description="GUI frontend for Windows diskpart â€” manage disk partitions with ease."
        BackgroundColor="transparent"
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png">
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png"/>
        <uap:SplashScreen Image="Assets\SplashScreen.png"/>
      </uap:VisualElements>
    </Application>
  </Applications>

  <Capabilities>
    <!--
      runFullTrust is required for:
      - Running as administrator (requireAdministrator in app.manifest)
      - Executing diskpart.exe (system process)
      - WMI access to disk hardware
      NOTE: This restricted capability means the app cannot be submitted to the Microsoft Store.
            It is intended for sideloading / enterprise distribution.
    -->
    <rescap:Capability Name="runFullTrust" />
  </Capabilities>
</Package>
