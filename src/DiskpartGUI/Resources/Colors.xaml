<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Partition type colors -->
    <SolidColorBrush x:Key="PartitionNtfsBrush" Color="#2F80ED"/>
    <SolidColorBrush x:Key="PartitionFat32Brush" Color="#27AE60"/>
    <SolidColorBrush x:Key="PartitionExFatBrush" Color="#8E44AD"/>
    <SolidColorBrush x:Key="PartitionSystemBrush" Color="#E74C3C"/>
    <SolidColorBrush x:Key="PartitionUnknownBrush" Color="#95A5A6"/>
    <SolidColorBrush x:Key="UnallocatedBrush" Color="#2C3E50"/>

    <!-- UI colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#1A1A2E"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="#16213E"/>
    <SolidColorBrush x:Key="AccentBrush" Color="#2F80ED"/>
    <SolidColorBrush x:Key="ForegroundBrush" Color="#ECF0F1"/>
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="#95A5A6"/>
    <SolidColorBrush x:Key="BorderBrush" Color="#34495E"/>
    <SolidColorBrush x:Key="HoverBrush" Color="#1E2D45"/>
    <SolidColorBrush x:Key="SelectedBrush" Color="#2F80ED"/>

</ResourceDictionary>
