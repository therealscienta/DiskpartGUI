<Window x:Class="DiskpartGUI.Views.Dialogs.DeletePartitionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:DiskpartGUI.Converters"
        Title="Delete Partition"
        Width="440" Height="280"
        Background="#16213E"
        Foreground="#ECF0F1"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary Source="../../Resources/Styles.xaml"/>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Delete Partition" FontSize="16" FontWeight="SemiBold"
                   Foreground="#E74C3C" Margin="0,0,0,16"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding PartitionDescription}" Foreground="#ECF0F1"
                       FontSize="13" Margin="0,0,0,12" TextWrapping="Wrap"/>

            <Border Background="#2C1F1F" BorderBrush="#E74C3C" BorderThickness="1"
                    CornerRadius="4" Padding="12,10" Margin="0,0,0,12">
                <TextBlock Text="{Binding WarningMessage}" Foreground="#E74C3C"
                           FontSize="12" TextWrapping="Wrap"/>
            </Border>

            <CheckBox IsChecked="{Binding ForceOverride, Mode=TwoWay}"
                      Content="Force delete (override partition protection)"
                      Foreground="#ECF0F1" FontSize="12"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Content="Cancel" Style="{StaticResource PrimaryButtonStyle}"
                    Background="#34495E" Click="Cancel_Click" Margin="0,0,8,0"/>
            <Button Content="Delete" Style="{StaticResource DangerButtonStyle}"
                    IsEnabled="{Binding CanConfirm}" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</Window>
