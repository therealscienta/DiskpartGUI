<UserControl x:Class="DiskpartGUI.Views.DiskDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:DiskpartGUI.Views.Controls"
             xmlns:converters="clr-namespace:DiskpartGUI.Converters">

    <UserControl.Resources>
        <converters:BytesToHumanReadableConverter x:Key="BytesToHuman"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVis"/>
        <converters:PartitionTypeToColorConverter x:Key="TypeToColor"/>
    </UserControl.Resources>

    <Grid Background="#16213E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Disk header -->
        <Border Grid.Row="0" Background="#1A1A2E" Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="#34495E">
            <StackPanel>
                <TextBlock Text="{Binding Header}" FontSize="15" FontWeight="SemiBold" Foreground="#ECF0F1"/>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                    <TextBlock Text="{Binding InterfaceType}" Foreground="#95A5A6" FontSize="12" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding MediaType}" Foreground="#95A5A6" FontSize="12" Margin="0,0,12,0"/>
                    <TextBlock Text="{Binding Status}" Foreground="#2ECC71" FontSize="12"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Disk bar visualization -->
        <Border Grid.Row="1" Padding="16,12" BorderThickness="0,0,0,1" BorderBrush="#34495E">
            <controls:DiskBar TotalSizeBytes="{Binding SizeBytes}" DataContext="{Binding}"/>
        </Border>

        <!-- Partition DataGrid -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding Partitions}"
                  SelectedItem="{Binding SelectedPartition, Mode=TwoWay}"
                  Margin="0">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header=" " Width="6">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="4" Height="28" Margin="1,0"
                                    Background="{Binding Type, Converter={StaticResource TypeToColor}}"
                                    CornerRadius="2"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="#" Binding="{Binding PartitionIndex}" Width="40"/>
                <DataGridTextColumn Header="Drive" Binding="{Binding DriveLetter}" Width="60"/>
                <DataGridTextColumn Header="Label" Binding="{Binding VolumeName}" Width="120"/>
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="160"/>
                <DataGridTextColumn Header="Filesystem" Binding="{Binding FileSystem}" Width="90"/>
                <DataGridTextColumn Header="Size" Binding="{Binding DisplaySize}" Width="90"/>
                <DataGridTextColumn Header="Offset" Binding="{Binding DisplayOffset}" Width="90"/>
                <DataGridCheckBoxColumn Header="Boot" Binding="{Binding IsBootable, Mode=OneWay}" Width="50"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Partition detail panel -->
        <Border Grid.Row="3" Background="#1A1A2E" Padding="16,10"
                BorderThickness="0,1,0,0" BorderBrush="#34495E"
                Visibility="{Binding SelectedPartition, Converter={StaticResource BoolToVis}, ConverterParameter=notNull}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource FieldLabelStyle}" Text="Selected: " VerticalAlignment="Center"/>
                <TextBlock Foreground="#ECF0F1" VerticalAlignment="Center"
                           Text="{Binding SelectedPartition.Type}"/>
                <TextBlock Foreground="#95A5A6" Margin="16,0,0,0" VerticalAlignment="Center"
                           Text="{Binding SelectedPartition.DisplaySize}"/>
                <TextBlock Foreground="#95A5A6" Margin="16,0,0,0" VerticalAlignment="Center"
                           Text="{Binding SelectedPartition.FileSystem}"/>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
