<UserControl x:Class="DiskpartGUI.Views.Controls.DiskBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:DiskpartGUI.Converters"
             Height="48">

    <UserControl.Resources>
        <converters:PartitionTypeToColorConverter x:Key="TypeToColor"/>
        <converters:BytesToHumanReadableConverter x:Key="BytesToHuman"/>
    </UserControl.Resources>

    <Border Background="#1A1A2E" CornerRadius="4" ClipToBounds="True">
        <ItemsControl x:Name="PartitionsControl" ItemsSource="{Binding Partitions}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <DockPanel LastChildFill="True"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Width" Value="{Binding RelativeWidth}"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding Type, Converter={StaticResource TypeToColor}}"
                            Margin="1,0"
                            CornerRadius="2"
                            ToolTipService.ShowDuration="10000">
                        <Border.ToolTip>
                            <StackPanel Margin="8,6">
                                <TextBlock Text="{Binding DriveLetter, StringFormat='Drive: {0}'}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Type, StringFormat='Type: {0}'}"/>
                                <TextBlock Text="{Binding DisplaySize, StringFormat='Size: {0}'}"/>
                                <TextBlock Text="{Binding FileSystem, StringFormat='Filesystem: {0}'}"/>
                            </StackPanel>
                        </Border.ToolTip>
                        <TextBlock Text="{Binding DriveLetter}"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Opacity="0.9"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Border>
</UserControl>
